---
layout: null
sitemap: false
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:image="http://www.google.com/schemas/sitemap-image/1.1">

  <!-- ホームページ -->
  <url>
    <loc>{{ site.url }}/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>daily</changefreq>
    <priority>1.0</priority>
  </url>

  <!-- カテゴリページ -->
  {% for page in site.pages %}
    {% if page.layout == 'category' %}
      <url>
        <loc>{{ page.url | absolute_url }}</loc>
        <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
        <changefreq>weekly</changefreq>
        <priority>0.8</priority>
      </url>
    {% endif %}
  {% endfor %}

  <!-- 重要な固定ページ -->
  {% assign important_pages = "/knowhow/,/flow/,/nyusatsu-shikaku/,/service/,/contact/,/blog/,/blog-lp/,/lp1/" | split: "," %}
  {% for p in site.pages %}
    {% if important_pages contains p.url %}
      <url>
        <loc>{{ p.url | absolute_url }}</loc>
        <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
        <changefreq>weekly</changefreq>
        <priority>0.9</priority>
      </url>
    {% endif %}
  {% endfor %}

  <!-- ブログ記事 -->
  {% for post in site.posts %}
    <url>
      <loc>{{ post.url | absolute_url }}</loc>
      <lastmod>{{ post.last_modified_at | default: post.date | date_to_xmlschema }}</lastmod>
      <changefreq>monthly</changefreq>
      <priority>0.7</priority>
      {% if post.image %}
        <image:image>
          <image:loc>{{ post.image | absolute_url }}</image:loc>
          <image:title>{{ post.title | xml_escape }}</image:title>
          <image:caption>{{ post.excerpt | strip_html | truncate: 160 | xml_escape }}</image:caption>
        </image:image>
      {% endif %}
    </url>
  {% endfor %}

  <!-- その他のページ -->
  {% for page in site.pages %}
    {% unless page.sitemap == false or page.url contains '.xml' or page.url contains '.txt' or page.url contains '.json' or page.url contains '.css' or page.url contains '.js' or page.layout == 'category' or important_pages contains page.url or page.url == "/" %}
      <url>
        <loc>{{ page.url | absolute_url }}</loc>
        <lastmod>{{ page.last_modified_at | default: site.time | date_to_xmlschema }}</lastmod>
        <changefreq>monthly</changefreq>
        <priority>0.5</priority>
      </url>
    {% endunless %}
  {% endfor %}

</urlset>

